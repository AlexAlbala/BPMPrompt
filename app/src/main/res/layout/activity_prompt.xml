<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4b4e50"
    tools:context="com.a2t.autobpmprompt.app.controller.PromptActivity">


    <LinearLayout
        android:id="@+id/contents_fullscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/activity_prompt_markers_bar"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_prompt_top_bar">

            <ListView
                android:id="@+id/prompt_markers"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:cacheColorHint="#00000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_prompt_top_bar"
                android:background="@android:color/transparent"
                android:cacheColorHint="#00000000">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/prompt_current_bpm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/prompt_current_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/prompt_current_beat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    style="?metaButtonBarStyle"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/prompt_edit_top_button"
                        style="?metaButtonBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="switchToEdit"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:text="@string/edit_button" />

                    <Button
                        android:id="@+id/prompt_done_top_button"
                        style="?metaButtonBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="promptSave"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:text="@string/done_button" />

                    <Button
                        android:id="@+id/prompt_rename_top_button"
                        style="?metaButtonBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="renamePrompt"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:text="@string/rename_button" />

                    <Button
                        android:id="@+id/prompt_delete_top_button"
                        style="?metaButtonBarStyle"
                        android:background="#FFFF0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="deletePrompt"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:text="@string/delete_button" />
                </LinearLayout>


            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.joanzapata.pdfview.PDFView
                    android:id="@+id/pdfview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <SurfaceView
                    android:id="@+id/prompt_floating_canvas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>


        </LinearLayout>
    </LinearLayout>

    <!-- This FramLinearLayoutts its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:id="@+id/frame_content_controls"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/activity_prompt_top_bar">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black_overlay"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/prompt_button_right_play"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="promptPlay"
                android:text="@string/play_button" />

            <Button
                android:id="@+id/prompt_button_right_pause"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="promptPause"
                android:text="@string/pause_button" />

            <Button
                android:id="@+id/prompt_button_right_stop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="promptStop"
                android:text="@string/stop_button" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_top_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/notifications_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="36dp"
                android:layout_height="fill_parent"
                android:src="@drawable/infoicon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/currentMarker_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="Marker title"
                    android:textColor="#FF000000"
                    android:textSize="@dimen/abc_text_size_title_material"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/currentMarker_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Marker description"
                    android:textColor="#FF000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currentMarker_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:text="Marker bar"
                        android:textColor="#FF000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/currentMarker_beat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:text="Marker beat"
                        android:textColor="#FF000000"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
