                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:cacheColorHint="#00000000" />
            </LinearLayout>

        </FrameLayout>-->

        <ImageView
            android:id="@+id/prompt_next_page"
            android:layout_width="@dimen/prompt_pagers_size"
            android:layout_height="@dimen/prompt_pagers_size"
            android:layout_gravity="end|bottom"
            android:rotation="90"
            android:src="@drawable/page_next_previous">

        </ImageView>

        <ImageView
            android:id="@+id/prompt_previous_page"
            android:layout_width="@dimen/prompt_pagers_size"
            android:layout_height="@dimen/prompt_pagers_size"
            android:layout_gravity="start|bottom"
            android:rotation="180"
            android:src="@drawable/page_next_previous">

        </ImageView>


        <FrameLayout
            android:id="@+id/frame_top_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:visibility="invisible">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/notifications_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/infoicon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/currentMarker_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:text="Marker title"
                        android:textColor="#FF000000"
                        android:textSize="@dimen/abc_text_size_title_material"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/currentMarker_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:text="Marker description"
                        android:textColor="#FF000000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/currentMarker_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="Marker bar"
                            android:textColor="#FF000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/currentMarker_beat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="Marker beat"
                            android:textColor="#FF000000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/prompt_set_list_prompts_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/activity_prompt_top_bar"
            android:background="@color/prompt_set_list_translucent">

            <ListView
                android:id="@+id/prompt_set_list_prompts"
                android:layout_gravity="center"
                android:layout_width="@dimen/prompt_set_list_width"
                android:layout_height="@dimen/prompt_set_list_height"
                android:background="@drawable/setlist_prompt_bg">

            </ListView>
        </FrameLayout>
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>

